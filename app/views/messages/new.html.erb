<div class="container">

<h1>Messages New</h1>

<br>



<%= form_for @visitor_message, url: messages_url do |f| %>
    <% if @visitor_message.errors.any? %>

          <div id="error_explanation">
            <h2>
            <%= pluralize(@visitor_message.errors.count, "error") %>
            prohibited this message from sending
            </h2>
            <ul>
              <% @visitor_message.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
          </div>
<% end %>




<div class="row">
       <div class="col-sm-6  form-group ">
       <%= f.label :fullname,  class: 'col-sm-2 control-label' %>
       <div class="col-sm-6 ">
         <%= f.text_field :fullname, class: 'form-control', placeholder: "Fullname" %>
       </div>

       </div>

       <div class="col-sm-6  form-group">
         <%= f.label :email, class: 'col-sm-2 control-label' %>
          <div class="col-sm-6">
         <%= f.text_field :email, class: 'form-control', placeholder: "Email" %>
       </div>

       </div>


        <div class="col-sm-10 form-group">
      <%= f.fields_for :messages do |c| %>
       <%= c.label :content, class: 'col-sm-2 control-label' %>

       <%= c.text_area :content, class: 'form-control', placeholder: "Comment", rows: "5" %>
       <% end %>
      </div>
    </div>

            <div class="col-sm-12 form-group text-center">
              <%= f.submit 'Send Message' %>
            </div>


<% end %>
</div>
