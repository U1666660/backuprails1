<div class="container">


<h1>Dashboard</h1>

<h2>Post</h2>

<button class="btn btn-default btn-sm"><%= link_to new_admin_post_path, style: "color: #008b45" do %><h5>Create New Post</h5></button>
<% end %>

<button class="btn btn-default btn-sm"><%= link_to admin_posts_path do %><h5>List Posts</h5></button>
  <% end %>
<br>

<table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>title</th>
        <th>replies</th>
        <th>date</th>
        <th>actions</th>
      </tr>
    </thead>
  <tbody>

<% @posts.each do |post| %>
    <tr>
        <td><%= truncate(post.title, length: 40, separate: '' ) %></td>
          <td><%= post.comments.count %></td>
            <td><%= time_ago post.created_at %></td>
            <td><%= link_to 'edit', edit_admin_post_path(post) %></td>
            <td><%= link_to 'view', admin_post_path(post), style: "color: #FF4500" %></td>
            <td><%= link_to 'del', admin_post_path(post), style: "color: red", method: :delete, data: {confirm: 'Are you sure?'}  %></td>
    </tr>

<% end %>
  </tbody>
</table>



<h2>Comments</h2>
<button class="btn btn-default btn-sm"><%= link_to admin_comments_path, style: "color: #FF4500" do %><h5>List All Comments</h5></button>
<% end %>
<% @comments.each do |comment| %>
<p><%= comment.visitor.fullname %></p>
<p><%= truncate(comment.message, length: 125, separate: '' ) %></p>
<p><%= time_ago comment.created_at %></p>
<hr>
<% end %>


<h2>Visitor</h2>
<table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Full</th>
        <th>Email</th>
        <th>Created</th>
        <th>Actions</th>
      </tr>
    </thead>
  <tbody>

<% @visitors.each_with_index do |visitor, index| %>
    <tr>
        <td><%= index + 1 %></td>
          <td><%= visitor.fullname %></td>
          <td><%= visitor.email %></td>
            <td><%= time_ago visitor.created_at %></td>
            <td><%= link_to 'delete', admin_visitor_path(visitor), style: "color: red", method: :delete, data: {confirm: 'Are you sure?'}  %></td>
    </tr>

<% end %>
  </tbody>
</table>


</div>
