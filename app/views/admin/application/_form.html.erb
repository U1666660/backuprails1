
<div class="row">

  <div class="col-sm-12  form-group ">

<p><% render 'validation_errors', object: @post %></p>

<%= form_for [:admin, @post] do |f| %>

<div class="col-sm-12  form-group">
<p>
  <%= f.label :title, class: 'col-sm-2 control-label' %>
     <div class="col-sm-12 ">
    <%= f.text_field :title, class: 'form-control' %>
</p>
</div>
</div>


   <div class="col-sm-12  form-group">
<p>
  <%= f.label :content, class: 'col-sm-2 control-label' %>
   <div class="field">
    <%= f.trix_editor :content %>
</p>
</div>
</div>



<div class="col-sm-12  form-group">
<p>
  <%= f.label :publish, class: 'col-sm-2 control-label' %>

    <%= f.check_box :publish %>
</p>

</div>


<div class="col-sm-12  form-group">

  <%= f.select :tag_ids, Tag.all.collect {|t| [t.name, t.id]}, {prompt: 'Select Tag'}, multiple: :true, class: 'form-control' %>


<br>

  <%= f.submit %>


</div>

<% end %>

</div>
